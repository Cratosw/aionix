# Aionix AI Studio 环境配置示例
# 复制此文件为 .env 并根据实际环境修改配置

# 服务器配置
SERVER_HOST=127.0.0.1
SERVER_PORT=8080
SERVER_WORKERS=4

# 数据库配置
DATABASE_URL=postgresql://postgres:password@localhost:5432/aionix
DATABASE_MAX_CONNECTIONS=10
DATABASE_MIN_CONNECTIONS=1

# Redis 配置（用于限流和缓存）
REDIS_URL=redis://localhost:6379
REDIS_MAX_CONNECTIONS=10

# JWT 配置
JWT_SECRET=your-super-secret-jwt-key-change-in-production-environment
JWT_ACCESS_TOKEN_EXPIRES_HOURS=24
JWT_REFRESH_TOKEN_EXPIRES_DAYS=30

# AI 服务配置
AI_MODEL_ENDPOINT=http://localhost:11434
AI_MODEL_NAME=llama2
AI_API_KEY=your-ai-api-key
AI_MAX_TOKENS=2048
AI_TEMPERATURE=0.7

# 日志配置
RUST_LOG=info,aionix=debug
LOG_LEVEL=info
LOG_FORMAT=json

# 文件存储配置
STORAGE_TYPE=local
STORAGE_PATH=./storage
MAX_FILE_SIZE=10485760  # 10MB

# 邮件配置（用于通知）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@aionix.ai
SMTP_FROM_NAME=Aionix AI Studio

# 安全配置
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-API-Key,X-Tenant-ID,X-Tenant-Slug

# 功能开关
ENABLE_SWAGGER_UI=true
ENABLE_METRICS=true
ENABLE_RATE_LIMITING=true
ENABLE_QUOTA_CHECKING=true
ENABLE_NOTIFICATIONS=true

# 开发模式配置
DEV_MODE=true
DEV_SEED_DATA=true
DEV_AUTO_MIGRATE=true